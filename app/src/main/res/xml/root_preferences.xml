<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="偏好设置">

        <ListPreference
            app:defaultValue="auto"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="主题设置"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:key="result_show"
            app:title="选中翻译设置"
            app:entries="@array/result_show_entries"
            app:entryValues="@array/result_show_values"
            app:defaultValue="toast"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>